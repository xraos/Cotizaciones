@model Cotizaciones.Models.Cotizacion
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Crear Cotizacion";
}
@if (Context.Session.GetString("UsuarioID") != null)
{
<h2>Creacion de Cotizaciones</h2>

<h4>Introduzca los datos de la nueva Cotizacion</h4><br>
<font color="red"><h4>* Todos los campos son obligatorios</h4></font>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicios" class="control-label"></label>
                <input asp-for="Servicios" class="form-control" />
                <span asp-validation-for="Servicios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorCotizado" class="control-label"></label>
                <input asp-for="ValorCotizado" class="form-control" />
                <span asp-validation-for="ValorCotizado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control form-control-lg"  />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rut" class="control-label"></label>
                <select asp-for="Rut" class ="form-control" asp-items="ViewBag.Rut"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Cotizacion" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir a la lista de Cotizaciones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
                    }
                    else
                    {
                        <h4>Debe iniciar sesion para poder utilizar el sistema. <br><br><a asp-area="" asp-controller="Home" asp-action="Login">Iniciar Sesion</a></h4> 
                    }